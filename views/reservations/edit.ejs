<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
      rel="stylesheet"
    />

    <link
      href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
      rel="stylesheet"
    />

    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Document</title>
  </head>
  <body>
    <div class="login-container">
      <% if (typeof guest !== 'undefined') { %>
      <div class="welcome-msg">Welcome, <%= guest.name %></div>
      <a href="/Logout">Log Out</a>
      <% } else { %>
      <div class="logout-btn">
        <a href="/auth/google">Login with Google</a>
      </div>
      <% } %>
    </div>

    <nav class="navbar navbar-expand-lg navbar-light nav-color">
      <ul class="nav justify-content-center">
        <li class="nav-box">
          <div class="">
            <a class="nav-link active" href="/">Home</a>
          </div>
        </li>
        <li class="nav-item">
          <div class="">
            <a class="nav-link" href="/hotels">Hotels</a>
          </div>
        </li>
        <li class="">
          <div class="nav-box">
            <a class="nav-link" href="/reservations">My Bookings</a>
          </div>
        </li>
      </ul>
    </nav>
    <h1>This is my update page</h1>

    <form action="/reservations/<%=reservation.id%>?_method=PUT" method="POST">
      <div class="form-outline datepicker" style="width: 300px; margin: 10px">
        <input
          type="datetime-local"
          class="form-control"
          id="exampleDatepicker2"
          name="checkIn"
          value="<%=currentCheckIn%>"
          min="<%=currentCheckIn%>"
        />
        <label class="form-label">Check In</label>
      </div>

      <div class="form-outline datepicker" style="width: 300px; margin: 10px">
        <input
          type="datetime-local"
          class="form-control"
          id="exampleDatepicker2"
          name="checkOut"
          value="<%=currentCheckIn%>"
          min="<%=currentCheckIn%>"
        />
        <label class="form-label">Check Out</label>
      </div>

      <label>Number of Rooms</label>
      <select name="numberOfRooms">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
        <option value="6">6</option>
        <option value="7">7</option>
        <option value="8">8</option></select
      ><br />

      <label>Number of Guests</label>
      <select name="numberOfGuests">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
        <option value="6">6</option>
        <option value="7">7</option>
        <option value="8">8</option></select
      ><br />

      <h3>Room Type</h3>

      <select name="roomType" class="room-type">
        <option value="">Select One</option>
        <option value="StandardRoom">Standard Room</option>
        <option value="DeluxeRoom">Deluxe Room</option>
        <option value="LuxurySuite">Luxury Suite</option></select
      ><br />

      <label>Price</label>
      <input class="results" type="text" name="price" value="" readonly /><br />
      <br />

      <input
        type="submit"
        class="btn button-color"
        value="update Reservation"
      />
    </form>
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.js"
    ></script>
    <script src="/javascripts/main.js"></script>
  </body>
</html>
