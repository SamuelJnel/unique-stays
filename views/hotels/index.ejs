<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Document</title>
  </head>
  <body>
    <div class="login-container">
      <% if (typeof guest !== 'undefined') { %>
      <div class="welcome-msg">Welcome, <%= guest.name %></div>
      <a href="/Logout">Log Out</a>
      <% } else { %>
      <div class="logout-btn">
        <a href="/auth/google"
          >Login with <img src="/images/google.jpg" class="google-logo"
        /></a>
      </div>
      <% } %>
    </div>

    <nav class="navbar navbar-expand-lg navbar-light nav-color">
      <ul class="nav justify-content-center">
        <li class="nav-box">
          <div class="">
            <a class="nav-link active" href="/">Home</a>
          </div>
        </li>
        <li class="nav-item">
          <div class="">
            <a class="nav-link" href="/hotels">Hotels</a>
          </div>
        </li>
        <li class="">
          <div class="nav-box">
            <a class="nav-link" href="/reservations">My Bookings</a>
          </div>
        </li>
      </ul>
    </nav>

    <div id="hotel-section">
      <%hotels.forEach(function(el){%>
      <div class="hotel-content-container">
        <div class="hotel-container">
          <img src="<%=el.image%>" class="hotel-img" />
          <div class="hotel-text-content">
            <h3><%=el.name %></h3>
            <h4><%=el.location%></h4>
            <p><%=el.details%></p>
          </div>
        </div>
        <div class="hotel-button">
          <a href="/reservations/<%=el._id%>"
            ><button class="btn button-color btn-bold">Book a Room</button></a
          >
        </div>
      </div>
      <%})%>
    </div>
  </body>
</html>
